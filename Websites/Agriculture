<script>
  // Crop data - can be fetched from API in real app
  const crops = [
    {
      name: "Wheat",
      description: "A major cereal grain used worldwide to make flour for bread, pasta, pastry, and more.",
      link: "https://en.wikipedia.org/wiki/Wheat"
    },
    {
      name: "Corn",
      description: "Also called maize, it’s used for food, fodder, and biofuel production.",
      link: "https://en.wikipedia.org/wiki/Maize"
    },
    {
      name: "Rice",
      description: "A staple food for over half the world’s population, especially in Asia.",
      link: "https://en.wikipedia.org/wiki/Rice"
    },
    {
      name: "Soybean",
      description: "An important source of protein and oil in food and animal feed.",
      link: "https://en.wikipedia.org/wiki/Soybean"
    },
    {
      name: "Potato",
      description: "A root vegetable rich in carbohydrates, widely consumed globally.",
      link: "https://en.wikipedia.org/wiki/Potato"
    },
    {
      name: "Cotton",
      description: "A fiber crop used in textile manufacturing and industrial products.",
      link: "https://en.wikipedia.org/wiki/Cotton"
    }
  ];

  const cropListEl = document.getElementById('cropList');

  crops.forEach(crop => {
    const card = document.createElement('article');
    card.className = 'crop-card';
    card.tabIndex = 0;
    card.setAttribute('role', 'listitem');
    card.innerHTML = `
      <h3>${crop.name}</h3>
      <p>${crop.description}</p>
      <a href="${crop.link}" target="_blank" rel="noopener noreferrer" class="learn-more" aria-label="Learn more about ${crop.name}">Learn More</a>
    `;
    cropListEl.appendChild(card);
  });

  // Contact form validation and submit handling
  const form = document.getElementById('contactForm');

  form.addEventListener('submit', event => {
    event.preventDefault();

    const name = form.name.value.trim();
    const email = form.email.value.trim();
    const message = form.message.value.trim();

    if (!name || !email || !message) {
      alert('Please fill in all required fields.');
      return;
    }

    // Simple email validation
    const emailPattern = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
    if (!emailPattern.test(email)) {
      alert('Please enter a valid email address.');
      return;
    }

    // Simulate successful submission
    alert(`Thanks, ${name}! Your message has been sent.`);

    form.reset();
  });
</script>

